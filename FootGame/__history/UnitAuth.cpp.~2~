#include <fmx.h>
#pragma hdrstop

#include "UnitAuth.h"
#include "Profile.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TFormAuth *FormAuth;
//---------------------------------------------------------------------------
__fastcall TFormAuth::TFormAuth(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TFormAuth::Button1Click(TObject *Sender)
{
	ofstream db("db.bin", ios_base::binary);
	Profile play;

	play.name = "Ilya";
	play.cash = 5000;

	play.write(db);
	db.close();

	Profile play2;
	ifstream db2("db.bin", ios_base::binary);
	play2.read(db2);
    Label1->Text = ToStr(play2.cash).c_str();
}
